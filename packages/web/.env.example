# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # For webhooks (keep secret!)

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_GOOGLE_MAPS_MAP_ID=your-map-id  # Create at https://console.cloud.google.com/google/maps-apis/studio/maps

# Stripe
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs
# Create these products in Stripe Dashboard:
# 1. "LatticeForge Starter" - $49/month
# 2. "LatticeForge Pro" - $199/month
# 3. "LatticeForge Enterprise" - $499/month
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# Anthropic (for Claude-powered briefings)
ANTHROPIC_API_KEY=sk-ant-...

# RunPod Self-Hosted LLM (LFBM - LatticeForge Briefing Model)
# Use this to replace Anthropic calls with your own fine-tuned model
# Reduces cost from ~$0.50/briefing to ~$0.001/briefing
LFBM_ENDPOINT=https://api.runpod.ai/v2/p2rvk115ebb42j  # Your vLLM endpoint
LFBM_API_KEY=your-runpod-api-key
LFBM_MODEL=Qwen/Qwen2.5-3B-Instruct
PREFER_LFBM=false  # Set to true to prefer LFBM over Anthropic

# RunPod Endpoints (for reference)
# Axolotl Training: https://api.runpod.ai/v2/w5w7c0mseycf23/run
# vLLM Inference:   https://api.runpod.ai/v2/p2rvk115ebb42j/run
