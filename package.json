{
  "name": "nucleation-packages",
  "version": "1.0.0",
  "private": true,
  "description": "Early warning systems for phase transitions. Detect the calm before the storm.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "harness"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "./scripts/install-husky.sh",
    "publish:all": "npm publish --workspaces --access public",
    "monitor": "node harness/src/index.js",
    "ablation": "node harness/src/ablation-tests.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.15.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "next": "^16.0.10",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "author": "Ryan Cardwell <aphoticshaman@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aphoticshaman/nucleation-packages"
  },
  "keywords": [
    "early-warning",
    "phase-transition",
    "anomaly-detection",
    "monitoring",
    "wasm"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "esbuild": ">=0.25.0"
  },
  "dependencies": {
    "@upstash/redis": "^1.35.7"
  }
}
